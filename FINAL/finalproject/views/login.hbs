<form action="http://localhost:5000/signup" method="post">
    <input class="btn btn-outline-primary btn1 first" placeholder="first name">
    <input class="btn btn-outline-secondary btn1 last" placeholder="last name"><br><br>
    <input class="btn btn-outline-primary btn1" placeholder="e-mail" type="email"><br><br>
    <input class="btn btn-outline-primary btn1" placeholder="mobile number" type="number"><br><br>
    <input class="btn btn-outline-primary btn1" id="inp3" placeholder="enter username" type="text" name="username"><br><br>
    <input class="btn btn-outline-primary btn1" id="inp4" placeholder="enter password" type="password" name="password"><br><br>
    <input class="btn btn-outline-primary btn1" id="btn3" type="submit" value="Sign-up">

