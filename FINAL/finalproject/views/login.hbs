            font-size: 350%;
            width: 55%;

        }
        #a2{
            width: 35%;
            margin-left: 2%
        }
        body,html{
            height: 100%;
        }
        @media  screen and (max-width: 650px) and (min-width: 481px) {
            #a1{
                font-size: 300%;
            }
            #inp1,#inp2{
                width: 30%;
            }
            .btn1{
                width: 80%;
            }
        }
        @media  screen and (max-width: 481px) and (min-width: 250px) {
.jumbotron{
    display: block;
}
            .login{
                width: 100%;
                text-align: center;
                margin-top: -10px;
            }
            #inp1,#inp2{
                width: 30%;
            }
            .libo{
                width: 100%;
                text-align: center;
