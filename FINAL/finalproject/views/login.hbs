            font-weight: bold;
            color: wheat;
            width: 28%;
            margin-left: 2%;
        }
        .sign{
            font-size: 4rem;
            margin-top: -10%;
            margin-bottom: 5%;

        }
        .btn1{
            border: 1px solid midnightblue;
            width: 49%;
        }
        #a{
            height: 70%;
            width: 100%;
            display: flex;
            flex-wrap: wrap
        }
        #a1{
            background-image: url(http://www.massivemagazine.org.nz/wp-content/uploads/2017/09/books-820x312.jpeg);
