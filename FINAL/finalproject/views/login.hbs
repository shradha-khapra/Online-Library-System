    <input class="btn btn-outline-primary" id="inp1" placeholder="Username" type="text" name="username" style="margin-top:15px" >
    <input class="btn btn-outline-primary" id="inp2" placeholder="Password" type="password" name="password" style="margin-top:15px" >
    <input class="btn btn-outline-primary" type="submit" value="Log in" style="height: 30px; margin-top: 18px">
